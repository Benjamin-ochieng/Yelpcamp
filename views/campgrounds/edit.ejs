<div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit <%= campground.name%> </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="location">Name</label>
                        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>">
                    </div>
                    <div class="form-group">
                        <label for="location">Image</label>
                        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image%>">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
<input class="form-control" type="text" name="campground[location]" value= " <%= campground.location === undefined ? campground.name : campground.location  %>">
                    </div>
                    <div class="form-group">
                        <label for="location">Price</label>
                        <input class="form-control" type="text" name="campground[price]" value="<%= campground.price%>">
                    </div>
                    <div class="form-group">
                        <label for="location">Description</label>
                        <textarea class="form-control" name="campground[description]" rows="7"><%= campground.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>


