<%- include('../partials/header') %>
<div class="container">
        <header class="jumbotron ">
            <div class="container text-left">
                <p ><span class="welcome_heading">Welcome to yelpcamp!</span></p>
                <p><span class="welcome_text">View our hand-picked campgrounds from <br> all over the world</span></p>
            </div>
            <div class="container text-center">
                    <form action="/campgrounds" method="GET" >
                        <div class="row search">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-9 col-md-9 p-0">
                                        <input type="text" name="search" class="form-control search-input" placeholder="Search a campsite">
                                    </div>
            
                                    <div class="col-lg-3 col-md-3 p-0">
                                            <input type="submit" value="Search" class="btn btn-default search-button">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
            </div>
        </header>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
           <% campgrounds.forEach(campground => { %>
            
               <div class="col-md-3 col-sm-6">
                   <div class="thumbnail text-left">
                      <img src="<%= campground.image %>">
                      <div class="caption">
                          <h4><%= campground.name %></h4>
                          <p><a href="/campgrounds/<%= campground._id %>">More Info</a></p>
                      </div>

                   </div>
               </div>
           
           <% }); %>
       </div>
   </div>
   

<%- include('../partials/footer') %>
